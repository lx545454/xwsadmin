<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="box-title">
                <h3><i class="icon-edit"></i>添加&编辑公会</h3>
            </div>

            <div class="box-content">
                <form id="gift-info-form" action="<!--{{url('/conference/home/add')}}-->" method="POST" class='form-horizontal form-validate' enctype="multipart/form-data">
                    <input type="hidden" name="id" value="<!--{{ data.id }}-->"/>
                    <input type="hidden" name="userId" value="<!--{{ userInfo.id }}-->"/>
                    <input type="hidden" name="user_name" value="<!--{{ userInfo.username }}-->"/>
                    <input type="hidden" name="user_password" value="<!--{{ userInfo.password }}-->"/>

                    <div class="control-group" >
                        <label class="control-label">公会名称</label>
                        <div class="controls">
                            <input type="text" name="name" class="input-large"  value="<!--{{data.name}}-->"/>
                        </div>
                    </div>

                    <div class="control-group" >
                        <label class="control-label">登录名</label>
                        <div class="controls">
                            <input type="text" name="userName"  class="input-large"  value="<!--{{data.userName}}-->" />
                        </div>
                    </div>

                    <div class="control-group" >
                        <label class="control-label">密码</label>
                        <div class="controls">
                            <input type="text" name="openPassword" class="input-large"  value="<!--{{data.openPassword}}-->" />
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary" id="editOrAdd"><i class="icon-ok"></i>保存</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

