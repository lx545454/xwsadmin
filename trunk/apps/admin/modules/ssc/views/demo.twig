<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
        <div class="box box-color box-bordered">
            <div class="box-title">
                <h3>
                    重庆时时彩<!--{{yes}}-->----<!--{{no}}-->
                </h3>
                <div class="actions">
                    <form action="<!--{{url('ssc/home/one')}}-->" class="">
                        <table class="table-filter">
                            <tr>
                                <td>
                                    <input name="qici" type="text" class="input-medium" placeholder="期次" value="<!--{{search.qici}}-->">
                                    <input name="count" type="text" class="input-medium" placeholder="条数" value="<!--{{search.count}}-->">
                                </td>
                                <td><a class="btn ajax-get">查询</a></td>
                            </tr>
                        </table>
                    </form>
                </div>
            </div>
            <div class="box-content nopadding">
                <table class="table table-hover table-nomargin">
                    <thead>
                    <tr>
                        <th class="col-120">输入</th>
                        <th class="col-120">处理</th>
                        <th class="col-120">结果</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>
                            <textarea id="qicis" style="height: 200px"></textarea>
                        </td>
                        <td>
                            <table>
                                <tr><td>开始位置 <input id="startNum" type="text" class="input-small"></td> <td> 取几个 <input id="endNum" type="text" class="input-small"></td></tr>
                                <tr><td>条数 <input id="count" type="text" class="input-small"></td><td><input id="dui" type="checkbox">是否对位</td></tr>
                                <tr><td><input type="radio" value="1" name="updown" checked="checked">往期</td><td><input type="radio" value="0" name="updown">后期</td></tr>
                            </table>
                        </td>
                        <td>
                            <textarea id="jieguo" style="height: 200px"></textarea>
                        </td>
                    </tr>
                    </tbody>
                </table>
                <div class="pagelink">
                    <!--{{pagelinks}}-->
                </div>
            </div>
        </div>
    </div>
</div>
<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script>
    $(function(){
        $(".ajax-get").click(function(){
            var qicis = $("#qicis").val();
            var count = $("#count").val();
            var startNum = $("#startNum").val();
            var endNum = $("#endNum").val();
            var dui = $(":checkbox").is(':checked')?1:0;
            var updown = $(":radio:checked").val();
            $.post('<!--{{url('ssc/home/ajax-getdemo')}}-->',{qicis:qicis,count:count,startNum:startNum,endNum:endNum,dui:dui,updown:updown},function(data){
                $("#jieguo").html(data.str);
//                if(data.success == 'true'){
//                    window.location.href = window.location.href;
//                }
            },"json");
        });
    });
</script>
<script src="/static/js/laydate/laydate.js"></script>
<!--{%endblock%}-->